<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="krobertson.howigotstarted.FourFragment">

    <Button
        android:id="@+id/btn_resourceLinkFour"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_resourceLinkThree"
        android:layout_marginTop="46dp"
        android:background="@null"
        android:text="Link Four"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_resourceLinkThree"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/btn_resourceLinkTwo"
        android:layout_marginTop="42dp"
        android:background="@null"
        android:text="Link Three"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_resourceLinkTwo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:text="Link Two"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_resourceLinkOne"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="179dp"
        android:background="@null"
        android:text="Link One"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/txtExplainResource"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:text="TextView" />

</RelativeLayout>
